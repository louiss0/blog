---
import InternalHeading from "../Heading.astro";
import type { HTMLAttributes } from "astro/types";
type AcceptableLevels = 1 | 2 | 3 | 4;

type Props<T extends AcceptableLevels> = {
  level: T;
} & HTMLAttributes<`h${T}`>;

const {
  props: { level, id },
} = Astro;
---

<InternalHeading {level} {id} class="text-left">
  <slot />
</InternalHeading>
